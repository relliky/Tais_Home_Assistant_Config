{
  "alias": "Living Room Heating Schedule On If Staying In The Room",
  "trigger": [
    {
      "platform": "state",
      "entity_id": [
        "input_select.living_room_occupancy"
      ],
      "to": "Stayed Inside"
    }
  ],
  "action": [
    {
      "if": [
        {
          "condition": "not",
          "conditions": [
            {
              "condition": "state",
              "entity_id": "climate.living_room",
              "state": "heat"
            }
          ]
        }
      ],
      "then": [
        {
          "service": "climate.set_hvac_mode",
          "data": {
            "hvac_mode": "heat"
          },
          "target": {
            "entity_id": "climate.living_room"
          }
        },
        {
          "service": "switch.turn_on",
          "target": {
            "entity_id": "switch.schedule_living_room_temperature"
          }
        }
      ]
    }
  ]
}